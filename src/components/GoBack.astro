---
import NavLink from "./NavLink.astro";

export type Props = {
    text: string;
    href: string;
}
const { text, href } = Astro.props as Props;

---
<div class="my-3">
Повернутись до розділу: <NavLink
        class="text-xl font-serif text-main hover:underline hover:underline-offset-2 hover:decoration-1 md:text-base"
        href={href}
>
    {text}
</NavLink>
</div>
