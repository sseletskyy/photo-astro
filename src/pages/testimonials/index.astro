---
import fg from 'fast-glob';
import BaseLayout from '../../layouts/BaseLayout.astro';
import siteConfig from '../../data/site-config';
import PageHeader from '../../components/PageHeader.astro';
import ImageGrid from '../../components/ImageGrid.astro';

const allImages: string[] = fg.sync(`public/images/testimonials/*.{jpg,png}`, { onlyFiles: true });

const images = allImages.map((src) => `/${src.split('public/')[1]}`).reverse();

const { title } = siteConfig.testimonials;
---

<BaseLayout description={siteConfig.description} image={siteConfig.image} showHeader={false}>
  <PageHeader title={title} nbsp={false} />
  <ImageGrid images={images} />
</BaseLayout>
